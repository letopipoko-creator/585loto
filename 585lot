        <!-- Slide 11 - 585 Participações -->
        <div class="slide slide-11">
            <div class="slide-11-content">
                <div class="slide-11-header">
                    <img src="logo.png" alt="Logo 585 Participações" class="slide-11-logo">
                    <h2>585 Participações</h2>
                    <p class="subtitle">Consulta de dados municipais por estado</p>
                </div>
                
                <div class="consultation-container">
                    <div class="consultation-grid">
                        <div class="consultation-column">
                            <label class="consultation-label">📍 Selecione o Estado</label>
                            <label class="consultation-sublabel">Escolha a Unidade Federativa (UF)</label>
                            <select id="stateSelect">
                                <option value="">Selecione um estado...</option>
                            </select>
                        </div>
                        <div class="consultation-column">
                            <label class="consultation-label">🏛️ Digite o Município</label>
                            <label class="consultation-sublabel">Digite para buscar a cidade</label>
                            <div class="consultation-column-wrapper">
                                <input type="text" id="municipalitySearch" class="search-input" placeholder="Digite o nome da cidade..." disabled>
                                <div class="search-results" id="searchResults"></div>
                            </div>
                        </div>
                    </div>
                    
                    <button class="generate-button" onclick="generateReport()">Gerar Relatório</button>
                    
                    <div class="result-area" id="resultText">
                        <p style="color: #999; font-size: 14px;">Nenhum município selecionado. Selecione um estado e digite o nome da cidade para visualizar os dados.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        let municipios = [];
        let selectedMunicipality = '';
        
        // Lista de estados brasileiros
        const estados = [
            { sigla: 'AC', nome: 'Acre' },
            { sigla: 'AL', nome: 'Alagoas' },
            { sigla: 'AP', nome: 'Amapá' },
            { sigla: 'AM', nome: 'Amazonas' },
            { sigla: 'BA', nome: 'Bahia' },
            { sigla: 'CE', nome: 'Ceará' },
            { sigla: 'DF', nome: 'Distrito Federal' },
            { sigla: 'ES', nome: 'Espírito Santo' },
            { sigla: 'GO', nome: 'Goiás' },
            { sigla: 'MA', nome: 'Maranhão' },
            { sigla: 'MT', nome: 'Mato Grosso' },
            { sigla: 'MS', nome: 'Mato Grosso do Sul' },
            { sigla: 'MG', nome: 'Minas Gerais' },
            { sigla: 'PA', nome: 'Pará' },
            { sigla: 'PB', nome: 'Paraíba' },
            { sigla: 'PR', nome: 'Paraná' },
            { sigla: 'PE', nome: 'Pernambuco' },
            { sigla: 'PI', nome: 'Piauí' },
            { sigla: 'RJ', nome: 'Rio de Janeiro' },
            { sigla: 'RN', nome: 'Rio Grande do Norte' },
            { sigla: 'RS', nome: 'Rio Grande do Sul' },
            { sigla: 'RO', nome: 'Rondônia' },
            { sigla: 'RR', nome: 'Roraima' },
            { sigla: 'SC', nome: 'Santa Catarina' },
            { sigla: 'SP', nome: 'São Paulo' },
            { sigla: 'SE', nome: 'Sergipe' },
            { sigla: 'TO', nome: 'Tocantins' }
        ];
        
        // Preencher select de estados
        const stateSelect = document.getElementById('stateSelect');
        estados.forEach(estado => {
            const option = document.createElement('option');
            option.value = estado.sigla;
            option.textContent = estado.nome;
            stateSelect.appendChild(option);
        });
        
        // Carregar municípios quando estado é selecionado
        stateSelect.addEventListener('change', async function() {
            const stateSigla = this.value;
            const municipalitySearch = document.getElementById('municipalitySearch');
            const searchResults = document.getElementById('searchResults');
            
            municipalitySearch.value = '';
            searchResults.innerHTML = '';
            searchResults.classList.remove('active');
            selectedMunicipality = '';
            
            if (!stateSigla) {
                municipalitySearch.disabled = true;
                return;
            }
            
            municipalitySearch.disabled = false;
            municipalitySearch.placeholder = 'Carregando...';
            
            try {
                const response = await fetch(`https://servicodados.ibge.gov.br/api/v1/localidades/estados/${stateSigla}/municipios`);
                const data = await response.json();
                municipios = data.map(m => m.nome).sort();
                municipalitySearch.placeholder = 'Digite o nome da cidade...';
            } catch (error) {
                console.error('Erro ao carregar municípios:', error);
                municipalitySearch.placeholder = 'Erro ao carregar cidades';
            }
        });
        
        // Buscar municípios enquanto digita
        document.getElementById('municipalitySearch').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const searchResults = document.getElementById('searchResults');
            
            if (searchTerm.length < 1) {
                searchResults.classList.remove('active');
                return;
            }
            
            const filtered = municipios.filter(m => m.toLowerCase().includes(searchTerm)).slice(0, 10);
            
            if (filtered.length === 0) {
                searchResults.innerHTML = '<div class="search-result-item">Nenhuma cidade encontrada</div>';
            } else {
                searchResults.innerHTML = filtered.map(m => `<div class="search-result-item" onclick="selectMunicipality('${m}')">${m}</div>`).join('');
            }
            
            searchResults.classList.add('active');
        });
        
        // Selecionar município
        function selectMunicipality(name) {
            selectedMunicipality = name;
            document.getElementById('municipalitySearch').value = name;
            document.getElementById('searchResults').classList.remove('active');
        }
        
        // Gerar relatório
        function generateReport() {
            const state = document.getElementById('stateSelect').value;
            const resultText = document.getElementById('resultText');
            
            if (!state || !selectedMunicipality) {
                resultText.innerHTML = '<p style="color: #F39C12; font-weight: bold;">Por favor, selecione um estado e uma cidade!</p>';
                return;
            }
            
            const populacao = Math.floor(Math.random() * 500000) + 10000;
            const brutoMes = (populacao * Math.random() * 100).toFixed(2);
            const investMes = (brutoMes * 0.15).toFixed(2);
            const investAno = (investMes * 12).toFixed(2);
            const liquidoMes = (brutoMes * 0.70).toFixed(2);
            const gerente = (brutoMes * 0.10).toFixed(2);
            const subgerente = (brutoMes * 0.02).toFixed(2);
            const periodo = '25 anos';
            
            const reportHTML = `
                <div class="result-title">${selectedMunicipality} - ${state}</div>
                <div class="result-subtitle">Dados financeiros e projeções</div>
                
                <div class="cards-grid">
                    <div class="data-card">
                        <div class="card-icon">👥</div>
                        <div class="card-label">População</div>
                        <div class="card-value">${populacao.toLocaleString('pt-BR')} hab</div>
                    </div>
                    
                    <div class="data-card">
                        <div class="card-icon">💵</div>
                        <div class="card-label">Bruto/mês</div>
                        <div class="card-value">R$ ${parseFloat(brutoMes).toLocaleString('pt-BR', {minimumFractionDigits: 2})}</div>
                    </div>
                    
                    <div class="data-card">
                        <div class="card-icon">📈</div>
                        <div class="card-label">15% Invest./mês</div>
                        <div class="card-value">R$ ${parseFloat(investMes).toLocaleString('pt-BR', {minimumFractionDigits: 2})}</div>
                    </div>
                    
                    <div class="data-card">
                        <div class="card-icon">📊</div>
                        <div class="card-label">15% Invest./ano</div>
                        <div class="card-value">R$ ${parseFloat(investAno).toLocaleString('pt-BR', {minimumFractionDigits: 2})}</div>
                    </div>
                    
                    <div class="data-card">
                        <div class="card-icon">💰</div>
                        <div class="card-label">Líquido/mês</div>
                        <div class="card-value">R$ ${parseFloat(liquidoMes).toLocaleString('pt-BR', {minimumFractionDigits: 2})}</div>
                    </div>
                    
                    <div class="data-card">
                        <div class="card-icon">👔</div>
                        <div class="card-label">10% Gerente</div>
                        <div class="card-value">R$ ${parseFloat(gerente).toLocaleString('pt-BR', {minimumFractionDigits: 2})}</div>
                    </div>
                    
                    <div class="data-card">
                        <div class="card-icon">👨‍💼</div>
                        <div class="card-label">2% Subgerente</div>
                        <div class="card-value">R$ ${parseFloat(subgerente).toLocaleString('pt-BR', {minimumFractionDigits: 2})}</div>
                    </div>
                    
                    <div class="data-card">
                        <div class="card-icon">📅</div>
                        <div class="card-label">Período</div>
                        <div class="card-value">${periodo}</div>
                    </div>
                </div>
            `;
            
            resultText.innerHTML = reportHTML;
        }
    </script>
</body>
</html>
